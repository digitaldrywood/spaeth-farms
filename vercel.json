{
  "version": 2,
  "builds": [
    { "src": "api/index.go", "use": "@vercel/go" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/public/static/$1" },
    { "src": "/assets/(.*)", "dest": "/public/assets/$1" },
    { "src": "/(.*)", "dest": "/api/index.go" }
  ]
}
